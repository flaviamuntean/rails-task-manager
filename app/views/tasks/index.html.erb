<h1> My Tasks </h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
    <p> <input type="checkbox" disabled checked> <%= link_to task.title, task_path(task) %> </p>
  <% else %>
    <p> <input type="checkbox" disabled> <%= link_to task.title, task_path(task) %> </p>
  <% end %>
<% end %>

<%= link_to "Create new task", tasks_new_path %>
